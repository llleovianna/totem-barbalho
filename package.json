{
  "name": "totem-barbalho-workspace",
  "version": "1.0.0",
  "description": "Totem Interativo IA Culinária Barbalho - Scripts de automação",
  "main": "electron-main.js",
  "scripts": {
    "start": "concurrently --kill-others --prefix \"[{name}]\" --names \"BACKEND,FRONTEND\" \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && cross-env PORT=3001 BROWSER=none npm start",
    "install:all": "npm run install:backend && npm run install:frontend",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "build": "cd frontend && npm run build",
    "setup": "npm run install:all && npm run check-env",
    "check-env": "node scripts/check-env.js",
    "dev": "concurrently --kill-others \"npm run start:backend\" \"npm run start:frontend\"",
    "stop": "taskkill /f /im node.exe",
    "build:electron": "npm run build && electron-builder",
    "start:electron": "npm run build && electron ."
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "cross-env": "^10.0.0",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "totem",
    "barbalho",
    "receitas",
    "ia",
    "react",
    "nodejs"
  ],
  "author": "Barbalho Alimentos",
  "license": "MIT",
  "dependencies": {
    "@fortawesome/free-solid-svg-icons": "^7.0.1",
    "@fortawesome/react-fontawesome": "^3.0.2",
    "file-saver": "^2.0.5",
    "node-forge": "^1.3.1",
    "qrcode.react": "^4.2.0",
    "react-icons": "^5.5.0"
  },
  "build": {
    "appId": "com.barbalho.totem",
    "productName": "Totem Barbalho",
    "files": [
      "backend/**/*",
      "frontend/build/**/*",
      "electron-main.js",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis"
    }
  }
}
